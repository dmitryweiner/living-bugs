{
  "name": "living-bugs",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "build:core": "yarn workspace @living-bugs/sim-core build",
    "build:web": "yarn workspace @living-bugs/web build",
    "dev:web": "yarn workspace @living-bugs/web dev",
    "start:headless": "yarn workspace @living-bugs/headless start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "train": "npx tsx apps/headless/src/main.ts --ticks 100000 --log-interval 10000 --max-creatures 300 --checkpoint checkpoint.json --checkpoint-interval 20000 --export configs/seed-genotypes.json --top-k 20",
    "train:short": "npx tsx apps/headless/src/main.ts --ticks 20000 --log-interval 5000 --max-creatures 300 --checkpoint checkpoint.json --checkpoint-interval 10000 --export configs/seed-genotypes.json --top-k 20",
    "train:long": "npx tsx apps/headless/src/main.ts --ticks 500000 --log-interval 50000 --max-creatures 300 --checkpoint checkpoint.json --checkpoint-interval 50000 --export configs/seed-genotypes.json --top-k 20",
    "pipeline": "yarn train && yarn build:core && yarn build:web",
    "pipeline:short": "yarn train:short && yarn build:core && yarn build:web"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
