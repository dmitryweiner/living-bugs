{
  "name": "living-bugs",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "build:core": "yarn workspace @living-bugs/sim-core build",
    "build:web": "yarn workspace @living-bugs/web build",
    "dev:web": "yarn workspace @living-bugs/web dev",
    "start:headless": "yarn workspace @living-bugs/headless start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
